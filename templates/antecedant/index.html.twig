{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('datatable/datatables.min.css') }}">
{% endblock %}
{% block title %}Patient index{% endblock %}

{% block body %}

    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-header start -->
            <div class="page-header card">
                <div class="row align-items-end">
                    <div class="col-lg-8">
                        <div class="page-header-title">
                            <i class="icofont icofont-layout bg-c-blue"></i>
                            <div class="d-inline">
                                <h4>Antecedants</h4>
                                <span></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('homepage') }}">
                                        <i class="icofont icofont-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item"><a
                                            href="{{ path('entity_antecedant_index') }}">Antecedants</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->
            <!-- Page-body start -->
            <div class="page-body">
                <!-- Basic table card start -->
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-success" href="{{ path('entity_antecedant_new') }}"><i
                                    class="icofont icofont-plus"></i> Nouveau</a>
                    </div>
                    <div class="card-block table-border-styl">
                        <div class="table-responsive">

                            <table class="table" id="table_antecedant">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Code</th>
                                    <th>Libelle</th>
                                    <th>Groupe</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                             {#   {% for antecedant in antecedants %}
                                    <tr>
                                        <td>{{ antecedant.id }}</td>
                                        <td>{{ antecedant.code }}</td>
                                        <td>{{ antecedant.libelle }}</td>
                                        <td>
                                            <a href="{{ path('antecedant_show', {'id': antecedant.id}) }}">show</a>
                                            <a href="{{ path('antecedant_edit', {'id': antecedant.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}#}
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include 'antecedant/javascript.html.twig' %}
{% endblock %}