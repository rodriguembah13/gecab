{{ form_start(form) }}
<div class="row">
    <div class="col-md-2">
        {{ form_row(form.numero) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.code) }}
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-2">
                {{ form_row(form.civilite) }}
            </div>
            <div class="col-md-10">
                {{ form_row(form.nomComplet) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.dateNaissance) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.taille) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.poids) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.sexe) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.groupsanguin) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.profession) }}
            </div>
        </div>
    </div>
    <div class="col-md-3">
        {% if patiant.photo is defined and patiant.photo  is not null %}
            <img id="img_emp" class="img img-responsive img-thumbnail" style="width:140px;height: 140px"
                 src="{{ asset('uploads/patient' ~ patiant.photo) }}" title="my image"
                 alt="My image">
        {% else %}  <img id="img_emp" class="img img-responsive img-thumbnail" style="width:140px;height: 140px"
                         src="{{ asset('assets/images/default_avatar.png') }}" title="my image"
                         alt="My image">
        {% endif %}
        {{ form_row(form.photo) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ form_row(form.situationfamiliale) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.clinique) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.famille) }}
    </div>
</div>

<hr>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.adresse) }}
        {{ form_row(form.telephone) }}
        {{ form_row(form.ville) }}
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.nomgarde) }}
                {{ form_row(form.relactiongarde) }}
                {{ form_row(form.paysgarde) }}
                {{ form_row(form.villegarde) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.adressegarde) }}
                {{ form_row(form.telephonegarde) }}
                {{ form_row(form.regiongarde) }}
                {{ form_row(form.pingarde) }}
            </div>
        </div>



    </div>
</div>

<h4 class="sub-title"></h4>
<div class="row">
    <div class="col-md-6">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>

</div>

{{ form_end(form) }}
